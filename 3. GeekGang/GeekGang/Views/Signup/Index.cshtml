@model GeekGang.Models.User
@{
    ViewBag.Title = "Signup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <html lang="en">
    <head>
        <title>Signup Page</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="icon" type="image/png" href="~/Content/Login/images/icons/favicon.ico" />
    </head>
    <body>

        <div class="limiter" id="login-div">
            @using (Html.BeginForm("Autherize", "Signup", FormMethod.Post))
            {
                <div class="container-login100" style="background-image:url('~/Content/Login/images/background.PNG');">
                    <div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-54">
                        <form class="login100-form">
                            <span class="login100-form-title p-b-49">
                                Signup
                            </span>
                            <div class="wrap-input100  m-b-23">
                                <table>
                                    <tr class="label-input100">
                                        <td>@Html.LabelFor(Model => Model.firstname)</td>
                                        <td>@Html.LabelFor(Model => Model.lastname)</td>
                                    </tr>
                                    <tr>
                                        <td>>@Html.EditorFor(Model => Model.firstname)</td>
                                        <td>>@Html.EditorFor(Model => Model.lastname)</td>
                                    </tr>
                                    <tr style="font-size:small; color:#ff0000">
                                        <td>@Html.ValidationMessageFor(Model => Model.firstname)</td>
                                        <td>@Html.ValidationMessageFor(Model => Model.lastname)</td>
                                    </tr>
                                </table>
                            </div>
                            <div class="wrap-input100  m-b-23">
                                <span class="label-input100">@Html.LabelFor(Model => Model.email)</span> <br>
                                <span>
                                    @Html.EditorFor(Model => Model.email)<br>
                                    <span style="font-size:small; color:#ff0000">@Html.ValidationMessageFor(Model => Model.email)</span>
                                </span>
                            </div>

                            <div class="wrap-input100">
                                <span class="label-input100">@Html.LabelFor(Model => Model.password)</span> <br>
                                <span>
                                    @Html.EditorFor(Model => Model.password)<br>
                                    <span style="font-size:small; color:#ff0000">@Html.ValidationMessageFor(Model => Model.password)</span>
                                </span>
                            </div>
                            <br>
                            <div class="wrap-input100">
                                <span class="label-input100">@Html.LabelFor(Model => Model.confirmed)</span> <br>
                                <span>
                                    @Html.EditorFor(Model => Model.confirmed)<br>
                                    <span style="font-size:small; color:#ff0000">@Html.ValidationMessageFor(Model => Model.confirmed)</span>
                                </span>
                            </div>
                            <div>
                                <label style="color:#ff0000">
                                    @Html.DisplayFor(Model => Model.LoginErrorMessage)
                                </label>
                            </div>
