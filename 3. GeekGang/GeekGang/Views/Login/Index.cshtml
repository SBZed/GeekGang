@model GeekGang.Models.User
@{ 
    ViewBag.Title = "Login";
}
<html lang="en">
<head>
    <title>Login Page</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/png" href="~/Content/Login/images/icons/favicon.ico" />
</head>
<body>

    <div class="limiter" id="login-div">
        @using (Html.BeginForm("Autherize", "Login", FormMethod.Post))
        {
            <div class="container-login100" style="background-image:url('~/Content/Login/images/background.PNG');">
                <div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-54">
                    <form class="login100-form">
                        <span class="login100-form-title p-b-49">
                            Login
                        </span>
                        <div></div>
                        <div class="wrap-input100  m-b-23">
                            <span class="label-input100">@Html.LabelFor(Model => Model.email)</span> <br>
                            <span>
                                @Html.EditorFor(Model => Model.email)<br>
                                <span style="font-size:small; color:#ff0000">@Html.ValidationMessageFor(Model => Model.email)</span>
                            </span>
                        </div>

                        <div class="wrap-input100">
                            <span class="label-input100">@Html.LabelFor(Model => Model.password)</span> <br>
                            <span>
                                @Html.EditorFor(Model => Model.password)<br>
                                <span style="font-size:small; color:#ff0000">@Html.ValidationMessageFor(Model => Model.password)</span>
                            </span>
                        </div>
                        <div>
                            <label style="color:#ff0000">
                                @Html.DisplayFor(Model => Model.LoginErrorMessage)
                            </label>
                        </div>
                        @*
                        <div class="wrap-input100 validate-input m-b-23" data-validate="Username is reauired">
                            <span class="label-input100">Username</span>
                            <input class="input100" type="text" name="username" placeholder="Type your username">
                            <span class="focus-input100" data-symbol="&#xf206;"></span>
                        </div>

                        <div class="wrap-input100 validate-input" data-validate="Password is required">
                            <span class="label-input100">@Html.LabelFor(Model => Model.password)</span>
                            <input class="input100" type="password" name="@Model => Model.password" placeholder="Type your password">
                            <span class="focus-input100" data-symbol="&#xf190;"></span>
                            <span>@Html.ValidationMessageFor(Model => Model.password)</span>
                        </div>
                        *@

                        <div class="text-right p-t-8 p-b-31">
                           
                            <a href="#">
                                @*Forgot password?*@
                            </a>

                        </div>

                        <div class="container-login100-form-btn">
                            <div class="wrap-login100-form-btn">
                                <div class="login100-form-bgbtn"></div>
                                <button type="submit" name="name" class="login100-form-btn">
                                    Login
                                </button>
                            </div>
                        </div>
                        <div class="txt1 text-center p-t-54 p-b-20">
                            <span>
                                Or Sign Up Using<br><br>
                            </span>
                            <span class="txt2">@Html.ActionLink("Sign Up", "Index", "Signup")</span>
                        </div>
                    </form>
                </div>
            </div>
        }
    </div>

    <div id="dropDownSelect1"></div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>